{
  "name": "web-extension-template",
  "productName": "Web Extension Template",
  "version": "1.0.0",
  "description": "A template for building cross browser web extensions.",
  "license": "ISC",
  "scripts": {
    "build": "npx webpack",
    "clean": "node npm.clean.js --paths build dist",
    "clean:build": "node npm.clean.js -p build",
    "clean:dist": "node npm.clean.js -p dist",
    "dist": "npm run build && node npm.dist.js --targets chrome firefox",
    "dist:chrome": "npm run build && node npm.dist.js -t chrome",
    "dist:firefox": "npm run build && node npm.dist.js -t firefox",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/chrome": "0.0.86",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "command-line-args": "^5.1.1",
    "copy-webpack-plugin": "^5.0.4",
    "eslint": "^6.1.0",
    "fs-extra": "^8.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jszip": "^3.2.2",
    "prettier": "^1.18.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6"
  }
}
